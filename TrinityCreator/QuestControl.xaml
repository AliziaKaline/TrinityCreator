<UserControl x:Class="TrinityCreator.QuestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrinityCreator"
             mc:Ignorable="d">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <local:QuestPreview QuestStatusIcon="DailyQuestIcon" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Right">
            <GroupBox Header="Quest Info">
                <StackPanel>
                    <DockPanel>
                        <Label Content="Quest Info" DockPanel.Dock="Left" />
                        <Label Content="Quest Info" DockPanel.Dock="Right" />
                    </DockPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </DockPanel>
</UserControl>
