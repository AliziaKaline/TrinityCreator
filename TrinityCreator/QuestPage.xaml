<Page x:Class="TrinityCreator.QuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrinityCreator"
      mc:Ignorable="d"
      Title="QuestPage">
    <TabControl Name="QuestTabControl">
        <TabItem Header="Quest Chain">
            <StackPanel>
                <TreeView Name="ChainTreeView"/>
                <DockPanel>
                    <Button Name="AddQuestBtn" Content="Add Quest" Margin="5" Click="AddQuestBtn_Click" />
                    <Button Name="RemoveQuestBtn" Content="Remove Selected Quest" Margin="5" Click="RemoveQuestBtn_Click" />
                </DockPanel>
                

            </StackPanel>
        </TabItem>
    </TabControl>
</Page>
