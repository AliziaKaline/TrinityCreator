<Page x:Class="TrinityCreator.QuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrinityCreator"
      mc:Ignorable="d"
      Title="QuestPage">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <local:QuestPreview QuestStatusIcon="DailyQuestIcon" DataContext="Quest" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Right">
            <GroupBox Header="Quest Chain">
                <Grid>
                    <TreeView Name="ChainTree" />
                    <Button Name="AddNewQuest" />
                </Grid>
            </GroupBox>
        </StackPanel>

    </DockPanel>
</Page>
